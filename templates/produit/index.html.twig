{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}
<div class= 'container'>
    <h1 class= "mt-5 mb-5 text-center dore">Nos produits</h1>
    <div class="row text-light ">
        <div class="col-md-3  ">
            <section class="bgFiltre  px-2 pb-1">
                <h3 class= "mt-2 text-center black mb-3  "> Filtrer</h3>
                <div class=" d-flex justify-content-center mx-auto">
                    {{form(form)}}
                </div>
            </section>
        </div>
        <div class="col-md-9 ">
            <div class="row product-container">
            {% for produit in produits %}
                <div class="col-md-4 card img-fluid bg-dark m-2 pb-1" style="width: 300px">
                    {% include "produit/single_produit.html.twig" %}
                </div>  
            {% endfor %}
            </div>
        </div>
    </div>
</div>




{% endblock %}
