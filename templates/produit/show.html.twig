{% extends 'base.html.twig' %}

{% block title %}{{produit.name}}{% endblock %}

{% block body %}
<div class="container  ">
    <div class="row articleSimple p-5  text-dark  mt-5  mb-5 ">
        <div class="col-md-4 ">

            <img src="/uploads/{{produit.illustration}}" alt="{{produit.name}}" class="img-fluid">

        </div>
 
        <div class="col-md-2">
        </div>

        <div class="col-md-4 my-auto">
            <h3 class="fs-2" > {{produit.name}} </h3>
            <p>{{produit.subtitle}} Gr</p>
            <span class="produit-page-price"> {{(produit.priceQuantity / 100)|number_format(2, ',', '.') }} €/portion  {% if produit.priceKg %} | {{(produit.priceKg / 100)|number_format(2, ',', '.') }} €/kg{% endif %}</span> 
            <br> <br>
            <p>
                {{produit.description}}
            </p>
            <br> <br>
            <a href="{{path('panier-ajouter-vers-produits', {'id' : produit.id}) }}" class="btn btn-connexion">Ajouter au panier</a>

            {# {{path('add-to-cart', {'id': produit.id})  }} #}
        </div>
    </div>
</div>

<div class="container text-light ">
<h2>Nos meilleures ventes</h2>
         <p>Découvrez nos produits les plus vendues.</p>
        <div class="row d-flex justify-content-around mt-3">
            {% for produit in produits %}
                <div class="col-md-4 text-light card m-1 mb-4 " style="width: 300px">
                    {% include "produit/single_produit.html.twig" %}
                </div>
            {% endfor %}
        </div><!-- /.row -->
</div>
{% endblock %}