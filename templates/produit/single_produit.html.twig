<div class="produit-item text-center text-dark ">
         <a href="{{path('produit',{'slug': produit.slug})}}"> <img src="/uploads/{{produit.illustration}}" alt="{{produit.name}}" class="img-fluid card-img-top imgSize"  ></a> 
        <h5 class="mt-3 fw-bold mb-2"> {{produit.name}}</h5>
        
        <span class="produit-subtitle card-body "> ~ {{produit.subtitle}} Gr | <strong> {{(produit.priceQuantity / 100)|number_format(2, ',', '.') }} €</strong></span><br>
        {% if produit.priceKg %}
        <span class="produit-subtitle card-body">{{(produit.priceKg / 100)|number_format(2, ',', '.') }} €/Kg</span> <br> 
         
              
        {% endif %}
        
        
        
        
  </div>